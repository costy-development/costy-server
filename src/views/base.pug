include _emailPreset.pug
doctype html
html(lang="en")
  head
    - const origin = process.env.APP_ORIGIN
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300&display=swap");

      * {
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Fira Sans", sans-serif;
      }

      .container {
        padding: 20px;
      }

      .content__box {
        width: 100%;
        max-width: 600px;
        margin:0 auto;
        padding: 40px 20px;
        border-radius: 8px;
        border: 1px solid #e4e8ef;
      }

      .logo__fig {
        width: 173px;
        height: 98px;
        margin:0 auto;
        background-image:url("#{origin}/assets/logo.png");
        background-size:100%;
        background-repeat:no-repeat;
      }

      .heading__box {
        margin-top:18px;
        text-align:center;
      }

      .heading {
        letter-spacing: 1px;
        line-height: 1.5;
        text-align:center;
      }

      .subheading {
        font-weight: 500;
        letter-spacing: 1px;
        line-height: 1.3;
        text-align: center;
        width:100%;
        margin-top:16px;
      }
    block head
    +emailPresetStyles
    title Costy
  body 
    //- Forgot Password
    div.container
      div.content__box
        include _head
        block content


