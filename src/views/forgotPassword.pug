extends base
block head
  style.
    .warning__msg {
      font-weight: 500;
      font-size: 16px;
    }

    .forgot-password__pin {
      font-size: 26px;
      letter-spacing: 8px;
    }

    .forgot-password__copy-pin--btn__popper.visible {
      visibility: visible;
      left: 0;
    }
block content
  p.warning__msg #{username} PIN is valid for 10 minutes
  p.forgot-password__pin #{pin }