include _emailPreset.pug

doctype html
html(lang="en")
  head
    - const origin = process.env.APP_ORIGIN
    meta(charset="UTF-8")
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300&display=swap");

      body {
        overflow-x:hidden;
        font-family: "Fira Sans", sans-serif;
        background-color:#fff !important;
      }

      .wrapper {
        width: 100%;
        table-layout: fixed;
        padding: 30px;
        background-color:#fff !important;
      }

      .main {
        width: 600px;
        height: 600px;
        margin: 0 auto;
        background-image: url("#{origin}/assets/line.webp");
        background-color:#fff !important;
        background-size: 150%;
        background-repeat: no-repeat;
        background-position: 50%;
        border-spacing: 0;
        border: 1px;
      }

      .circle-wrapper {
        table-layout: fixed;
        width: 100%;
        height: 100%;
      }

      .circle {
        background-color: #f9f9f9;
        width: 85%;
        height: 85%;
        table-layout: fixed;
        margin: auto;
        margin-top: 14%;
        border-radius: 100%;
        overflow:hidden;
      }

      .content-row {
        border-radius: 100%;
        width: 100%;
        vertical-align: top;
      }

      .logo {
        width: 130px;
        height: 70px;
        background-image: url("#{origin}/assets/logo.png");
        background-position: 0%;
        background-repeat: no-repeat;
        background-size: contain;
        margin: 0 auto;
        margin-top: 20px;
      }

      .content-box {
        width: 400px;
        margin-left:55px;
      }

      .title {
        text-align: center;
        font-size: 42px;
        line-height: 1;
        font-weight: 700;
        margin: 0 auto;
        word-wrap: break-word;
        text-wrap: balance;
        -moz-text-wrap: balance;
        -webkit-text-wrap: balance;
        -ms-text-wrap: balance;
      }

      .subtitle {
        text-align: center;
        font-size:24px;
        font-weight: 600;
        margin: 0 auto;
        word-wrap: break-word;
        text-wrap: balance;
        -moz-text-wrap: balance;
        -webkit-text-wrap: balance;
      }

      .message {
        text-align: center;
        font-weight: 600;
        font-size: 16px;
        margin: 0 auto;
        word-wrap: break-word;
        text-wrap: balance;
        -moz-text-wrap: balance;
        -webkit-text-wrap: balance;
      }

    block head
    +emailPresetStyles
    title Costy
  body 
    center.wrapper
      table.main(style=`background-image:url('${origin}/assets/line.webp');background-repeat:no-repeat;background-position:50%;background-size:150%;`)
        tr 
          td
            center.circle-wrapper
              block content


