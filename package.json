{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "tsc -p . && npm run copy:assets && npm run copy:css && npm run copy:views",
    "copy:views": "copyfiles -u 2 ./src/views/**/* build/views",
    "copy:css": "copyfiles -u 3 ./src/public/css/* build/public/css",
    "copy:assets": "copyfiles -u 3 ./src/public/assets/* build/public/assets",
    "watch": "nodemon --exec ts-node --files ./src/server.ts",
    "start": "node ./build/server.js",
    "start:dev": "concurrently \"npm:compile\" \"npm:watch\"",
    "build": "npm run compile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "pug": "^3.0.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/pug": "^2.0.10",
    "concurrently": "^8.2.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}